  <div class="nav-wrapper red darken-2">
    <a href="#" class="brand-logo center"><i class="material-icons left">ac_unit</i><i
        class="material-icons left">card_giftcard</i>Cyber Santa Lists<i class="material-icons right">ac_unit</i><i
        class="material-icons right">card_giftcard</i></a>
